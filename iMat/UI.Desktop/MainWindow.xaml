<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:UI.Desktop" xmlns:Content="clr-namespace:UI.Desktop.Content" x:Class="UI.Desktop.MainWindow"
        Title="iMat" Height="550" Width="970" Closing="Window_Closing">
    <Grid Background="#FFD8D8D8">
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="32"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu HorizontalAlignment="Stretch" Height="22" VerticalAlignment="Top" Grid.Row="0">
            <MenuItem Header="Arkiv">
                <MenuItem x:Name="menuItemLogOut" Header="Logga ut"/>
                <MenuItem x:Name="menuItemQuit" Header="Avsluta" Click="menuItemQuitClick" InputGestureText="Ctrl+Q"/>
            </MenuItem>
            <MenuItem Header="Hantera">
                <MenuItem x:Name="menuItemLists" Click="shoppingListPrefsClick" Header="Shoppinglistor..."/>
                <MenuItem x:Name="menuItemAccount" Header="Konto..." Click="menuItemPropertiesClick"/>
            </MenuItem>
            <MenuItem Header="Hjälp">
                <MenuItem x:Name="menuItemAbout" Header="Om iMat"/>
                <MenuItem Header="Besök iMats hemsida"/>
                <MenuItem Header="Användarguide"/>
            </MenuItem>
        </Menu>


        <DockPanel Grid.Row="1" Background="#A2AE97">
            <ToolBarTray HorizontalAlignment="Left" DockPanel.Dock="Left">
                <ToolBar >
                    <TextBox x:Name="searchField" Width="100"/>
                    <Button x:Name="searchButton" ToolTip="Sök" Width="28" Height="26" Margin="0,0,0,-1">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="Resources\Icons\search_256.png" Width="19" Height="16" OpacityMask="Black" Stretch="UniformToFill" RenderTransformOrigin="0,0.25"/>
                        </StackPanel>
                    </Button>
                </ToolBar>
                <ToolBar >
                    <ComboBox x:Name="sortCB" Text="Sortera"/>
                    <Button x:Name="filterButton" ToolTip="Filter" Width="25">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="Resources\Icons\filter.png" Width="21" Height="19" OpacityMask="Black" Stretch="UniformToFill" RenderTransformOrigin="0,0.25"/>
                        </StackPanel>

                    </Button>
                </ToolBar>
            </ToolBarTray>
            <ToolBarTray HorizontalAlignment="Right" DockPanel.Dock="Right">
                <ToolBar HorizontalAlignment="Right">
                    <Button x:Name="listViewButton" VerticalAlignment="Top" Click="listViewButton_Click" ToolTip="List view" Width="25" BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkDarkBrushKey}}" Height="26">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="Resources\Icons\list_order.png" Width="21" Height="19" OpacityMask="Black" Stretch="UniformToFill" RenderTransformOrigin="0,0.25"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="gridViewButton" Click="gridViewButton_Click" Width="25" BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkDarkBrushKey}}" RenderTransformOrigin="3.12,1.857" Height="26">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="Resources\Icons\thumbnail_order.png" Width="17" Height="19" OpacityMask="Black" RenderTransformOrigin="0.46,0.091" Stretch="UniformToFill"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="treeViewButton" Click="treeViewButton_Click" ToolTip="Tree view" Width="25" BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkDarkBrushKey}}" HorizontalAlignment="Center" VerticalAlignment="Top" Height="26">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="Resources\Icons\treeView_order.png" Width="24" Height="22" OpacityMask="Black" Stretch="UniformToFill"/>
                        </StackPanel>
                    </Button>
                </ToolBar>
                <ToolBar HorizontalAlignment="Right">
                    <Button Content="" Height="26" VerticalAlignment="Top" Width="28" BorderBrush="{x:Null}" ToolTip="Shoppinglistor" Click="shoppingListPrefsClick">
                        <Button.Background>
                            <ImageBrush ImageSource="Resources\Icons\copyList_2.png" Stretch="Uniform"/>
                        </Button.Background>
                    </Button>
                    <ComboBox x:Name="shoppingListSelectComboBox" Text="Shoppinglistor" IsEditable="True" ItemsSource="{Binding ShoppingListsCollection}" DisplayMemberPath="Name" SelectedValue="{Binding ShoppingListDummy}"  Margin="0" VerticalAlignment="Stretch" Width="100" SelectionChanged="shoppingListComboBoxSelectedChanged">
                        <ComboBox.Background>
                            <SolidColorBrush x:Name="comboBoxBrush" Color="White"/>
                        </ComboBox.Background>
                    </ComboBox>
                </ToolBar>
            </ToolBarTray>
        </DockPanel>
        <Grid  Grid.Row="2">
            <Grid.Background>
                <ImageBrush/>
            </Grid.Background>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <local:ProductBrowser x:Name="productBrowser" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#FF799E5A"/>
            <Content:ShoppingCartView x:Name="shoppingCart" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Stretch" Loaded="shoppingCart_Loaded"/>
        </Grid>
    </Grid>
</Window>
