<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:UI.Desktop" xmlns:Content="clr-namespace:UI.Desktop.Content" x:Class="UI.Desktop.MainWindow"
        Title="iMat" Height="450" Width="970">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="32"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu HorizontalAlignment="Stretch" Height="22" VerticalAlignment="Top" Grid.Row="0">
            <MenuItem Header="Arkiv">
                <MenuItem x:Name="menuItemLogOut" Header="Logga ut"/>
                <MenuItem x:Name="menuItemQuit" Header="Avsluta" Click="menuItemQuitClick" InputGestureText="Ctrl+Q"/>
            </MenuItem>
            <MenuItem Header="Hantera">
                <MenuItem x:Name="menuItemLists" Header="Listor"/>
                <MenuItem x:Name="menuItemAccount" Header="Konto"/>
            </MenuItem>
            <MenuItem Header="Hjälp">
                <MenuItem x:Name="menuItemAbout" Header="Om iMat"/>
                <MenuItem Header="Besök iMats hemsida"/>
                <MenuItem Header="Användarguide"/>
            </MenuItem>
        </Menu>


        <DockPanel Grid.Row="1" Background="#FFEEF5FD">
            <ToolBarTray HorizontalAlignment="Left" DockPanel.Dock="Left">
                <ToolBar >
                    <TextBox x:Name="searchField" Width="100"/>
                    <Button x:Name="searchButton" Content="" ToolTip="Sök" Width="22">
                        <Button.Background>
                            <ImageBrush ImageSource="C:\Users\Madäng\dat215\iMat\UI.Desktop\Resources\Icons\search_button_lightBlue.png"/>
                        </Button.Background>
                    </Button>
                </ToolBar>
                <ToolBar >
                    <ComboBox x:Name="sortCB" Text="Sortera"/>
                    <Button x:Name="filterButton" Content="" ToolTip="Filter" Width="25">
                        <Button.Background>
                            <ImageBrush ImageSource="C:\Users\Madäng\dat215\iMat\UI.Desktop\Resources\Icons\filter.png" Stretch="Uniform"/>
                        </Button.Background>
                    </Button>
                </ToolBar>
            </ToolBarTray>
            <ToolBarTray HorizontalAlignment="Right" DockPanel.Dock="Right">
                <ToolBar HorizontalAlignment="Right">
                    <Button x:Name="listViewButton" Content="" VerticalAlignment="Stretch" Click="listViewButton_Click" ToolTip="List view" Width="25">
                        <Button.Background>
                            <ImageBrush Stretch="UniformToFill" ImageSource="C:\Users\Madäng\dat215\iMat\UI.Desktop\Resources\Icons\list_order.png"/>
                        </Button.Background>
                    </Button>
                    <Button x:Name="gridViewButton" Content="" Click="gridViewButton_Click" Cursor="Grid view" Width="25">
                        <Button.Background>
                            <ImageBrush ImageSource="C:\Users\Madäng\dat215\iMat\UI.Desktop\Resources\Icons\thumbnail_order.png" Stretch="Uniform"/>
                        </Button.Background>
                    </Button>
                    <Button x:Name="treeViewButton" Content="" Click="treeViewButton_Click" ToolTip="Tree view" Width="25" Margin="0,0,0,-5">
                        <Button.Background>
                            <ImageBrush ImageSource="C:\Users\Madäng\dat215\iMat\UI.Desktop\Resources\Icons\treeView_order.png"/>
                        </Button.Background>
                    </Button>
                </ToolBar>
                <ToolBar HorizontalAlignment="Right">
                    <ComboBox x:Name="listCB" Text="Listor"/>
                </ToolBar>
            </ToolBarTray>
        </DockPanel>
        <Grid Margin="0,0,0,0" Grid.Row="2">
            <Grid.Background>
                <ImageBrush/>
            </Grid.Background>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <local:ProductBrowser x:Name="productBrowser" HorizontalAlignment="Left" VerticalAlignment="Stretch" Grid.ColumnSpan="2"/>
            <Content:ShoppingCartView x:Name="shoppingCart" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Bottom" Loaded="shoppingCart_Loaded"/>
        </Grid>
    </Grid>
</Window>
