<local:ProductView
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UI.Desktop" x:Class="UI.Desktop.GridViewItem" 
             mc:Ignorable="d" 
             d:DesignHeight="170" d:DesignWidth="170" Cursor="Hand">
    <Grid Margin="0,0,0,0" Width="170" Height="170">
        <Image x:Name="productImage" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Top" Height="80" />
        <Label x:Name="productName" Grid.Column="0" Content="produkt" HorizontalAlignment="Center" Margin="0,80,0,0" VerticalAlignment="Top" FontWeight="Bold" />
        <Label x:Name="productPriceLabel" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top" Content="kr"  Margin="0,100,0,0" />
        <Label x:Name="productJmfLabel" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top" Content="kr / " Margin="0,120,0,0"  />
        <Rectangle HorizontalAlignment="Right" Stroke="White" Fill="White" VerticalAlignment="Stretch" Width="5"/>
        <Rectangle HorizontalAlignment="Stretch" Stroke="White" Fill="White" VerticalAlignment="Bottom" Height="5"/>
    </Grid>
</local:ProductView>
