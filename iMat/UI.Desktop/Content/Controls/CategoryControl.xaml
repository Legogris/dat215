<UserControl x:Class="UI.Desktop.CategoryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="100">
    <Grid>
        <StackPanel Orientation="Horizontal" Margin="0,-2,0,0" >
            <Label x:Name="categoryLabel" Content="Label" HorizontalAlignment="Left" VerticalAlignment="Top" Cursor="Hand" FontSize="14" Foreground="Black"/>
            <Image x:Name="icon" Width="24" Height="24" Visibility="Collapsed" VerticalAlignment="Top" HorizontalAlignment="Left" Source="..\..\Resources\Icons\listbutton.png"/>
        </StackPanel>
        <StackPanel x:Name="stackPanel"  HorizontalAlignment="Stretch" Margin="10,27,0,0" VerticalAlignment="Stretch"/>
    </Grid>
</UserControl>
