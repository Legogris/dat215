<local:ProductView
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UI.Desktop" x:Class="UI.Desktop.DetailedItem" 
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="80"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="productImage" Grid.Column="0" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100"/>
        <Label x:Name="productName" Content="produkt" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Grid.Column="1" FontWeight="Bold"/>
        <Grid x:Name="selectorContainer" Grid.Column="1" Margin="0,36,0,0.4">
            
        </Grid>
        <Button x:Name="addToShoppingCartButton" Content="Lägg till i&#xD;&#xA;kundvagn" Grid.Column="2" HorizontalAlignment="Left" Margin="5,12,0,0" VerticalAlignment="Top" Width="62" Height="55" Click="bubbleItemAddedEvent"/>

    </Grid>
</local:ProductView>
