<local:ProductView
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UI.Desktop" x:Class="UI.Desktop.ListViewItem" 
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="80"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="productImage" Grid.Column="0" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100"/>
        <Label x:Name="productName" Grid.Column="1" Content="produkt" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontWeight="Bold" />
        <Label x:Name="productPriceLabel" Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Top" Content="kr"/>
        <Label x:Name="productJmfLabel" Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Top" Content="kr / " Margin="0,26,0,0" />

    </Grid>
</local:ProductView>
