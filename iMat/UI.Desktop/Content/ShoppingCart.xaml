<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Controls="clr-namespace:UI.Desktop.Content.Controls" x:Class="UI.Desktop.Content.ShoppingCartView" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="131"/>
        </Grid.RowDefinitions>
        <ScrollViewer HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <StackPanel x:Name="stackPanel" Width="230" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        </ScrollViewer>
        <Label Content="Totalt:" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Top" Margin="10,0,0,0" Height="26" Width="43" Grid.RowSpan="2"/>
        <Label Content="Antal varor:" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Top" Margin="120,0,0,0" Height="26" Width="71" Grid.RowSpan="2"/>
        <Label x:Name="grandTotalLabel" Content="0,00 kr" HorizontalAlignment="Left" Margin="50,0,0,0" Grid.Row="1" VerticalAlignment="Top" Height="26" Grid.RowSpan="2"/>
        <Label x:Name="itemsTotalLabel" Content="0 st" HorizontalAlignment="Left" Margin="189,0,0,0" Grid.Row="1" VerticalAlignment="Top" Height="26" Grid.RowSpan="2"/>
        <Button VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="10,10,10,0" Grid.Row="2">
            <StackPanel Orientation="Horizontal">
                <Image Source="..\Resources\Icons\checkout.png" Width="32" Height="32"/>
                <TextBlock Margin="10, 0, 0, 0" VerticalAlignment="Center"><Run Text="Till kassan"/></TextBlock>
            </StackPanel>
        </Button>
        <Button Content="visa&#xA;kundvagn" HorizontalAlignment="Left" Margin="120,60,0,0" Grid.Row="2" VerticalAlignment="Top" Width="55" Height="50"/>
        <Button HorizontalAlignment="Left" Margin="10,60,0,0" Grid.Row="2" VerticalAlignment="Top" Width="105" Height="50" ToolTip="Lägg till i lista">
            <StackPanel Orientation="Horizontal">
                <Image Source="..\Resources\Icons\CartToList.png" Width="64" Height="32"/>
            </StackPanel>
        </Button>
        <Button x:Name="clearShoppingCartButton" Content="rensa&#xA;kundvagn" HorizontalAlignment="Right" Margin="0,60,10,0" Grid.Row="2" VerticalAlignment="Top" Width="55" Height="50" Click="clearShoppingCartButton_Click"/>
        <Rectangle Fill="Black" HorizontalAlignment="Stretch" Height="1" Margin="5,0,5,0" Grid.Row="1" Stroke="Black" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
