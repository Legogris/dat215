<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Controls="clr-namespace:UI.Desktop.Content.Controls" x:Class="UI.Desktop.Content.ShoppingCartView" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="250">
    <Grid Margin="0,0,0,-529">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="131"/>
        </Grid.RowDefinitions>
        <StackPanel x:Name="stackPanel" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="217"/>
        <Label Content="Totalt:" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Top" Margin="10,0,0,0" Height="26" Width="43" Grid.RowSpan="2"/>
        <Label Content="Antal varor:" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Top" Margin="120,0,0,0" Height="26" Width="71" Grid.RowSpan="2"/>
        <Label x:Name="grandTotalLabel" Content="0,00 kr" HorizontalAlignment="Left" Margin="50,0,0,0" Grid.Row="1" VerticalAlignment="Top" Height="26" Width="45" Grid.RowSpan="2"/>
        <Label x:Name="itemsTotalLabel" Content="0 st" HorizontalAlignment="Left" Margin="189,0,0,0" Grid.Row="1" VerticalAlignment="Top" Height="26" Width="29" Grid.RowSpan="2"/>
        <Button Content="" HorizontalAlignment="Left" Margin="0,5,0,0" Grid.Row="2" VerticalAlignment="Top" Width="245" Height="50" BorderBrush="{x:Null}" ToolTip="Till Kassan" Foreground="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="..\Resources\Icons\checkoutButton.png"/>
            </Button.Background>
        </Button>
        <Button Content="visa&#xA;kundvagn" HorizontalAlignment="Left" Margin="124,60,0,0" Grid.Row="2" VerticalAlignment="Top" Width="50" Height="50"/>
        <Button Content="" HorizontalAlignment="Left" Margin="0,60,0,0" Grid.Row="2" VerticalAlignment="Top" Width="119" Height="50" ToolTip="Lägg till i lista">
            <Button.Background>
                <ImageBrush ImageSource="..\Resources\Icons\ListToCart.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="clearShoppingCartButton" Content="rensa&#xA;kundvagn" HorizontalAlignment="Left" Margin="179,60,0,0" Grid.Row="2" VerticalAlignment="Top" Width="50" Height="50" Click="clearShoppingCartButton_Click"/>
        <Label Content="obs! verkligen inte slutgiltig design" HorizontalAlignment="Left" Margin="16,622,0,0" VerticalAlignment="Top" FontWeight="Bold" Height="26" Width="209"/>
        <Rectangle Fill="Black" HorizontalAlignment="Stretch" Height="1" Margin="5,0,5,0" Grid.Row="1" Stroke="Black" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
