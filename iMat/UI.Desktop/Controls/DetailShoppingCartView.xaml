<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Content="clr-namespace:UI.Desktop.Preferences.Content" x:Class="UI.Desktop.Controls.DetailShoppingCartView"
        Title="Detaljer" Height="300" Width="334" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" ShowInTaskbar="False">
    <Grid>
        <Content:AbstractListItem x:Name="desc" Margin="5,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Grid Margin="0,25,0,0">
            <Grid HorizontalAlignment="Stretch" Margin="5,0,5,0" Background="{StaticResource DarkComplement}">
                <Content:AbstractListItem x:Name="head" HorizontalAlignment="Left" Width="300" VerticalAlignment="Top"/>
            </Grid>
            <ScrollViewer HorizontalAlignment="Stretch" Background="White" Margin="5,26,5,0" VerticalAlignment="Stretch">
                <StackPanel x:Name="content" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300"/>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
