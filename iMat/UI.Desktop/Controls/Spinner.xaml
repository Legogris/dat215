<UserControl x:Class="UI.Desktop.Spinner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="65" d:DesignWidth="120">
    <Grid MaxWidth="150">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="42"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="SpinnerTextBox" HorizontalAlignment="Stretch" Height="23" Margin="1,2,0,0" MinWidth="28" TextWrapping="Wrap" VerticalAlignment="Top" PreviewTextInput="SpinnerTextBox_PreviewTextInput_1" TextChanged="textChanged"/>
        <Button x:Name="SpinnerDecrease" Content="−" HorizontalAlignment="Left" Margin="2,2,0,0" VerticalAlignment="Top" Width="20" Click="spinnerDecrease" Grid.Column="1" Height="22"/>
        <Button x:Name="SpinnerIncrease" Content="+" HorizontalAlignment="Left" Margin="22,2,0,0" VerticalAlignment="Top" Width="20" Click="spinnerIncrease" Grid.Column="1" Height="22"/>
    </Grid>
</UserControl>
