<UserControl x:Class="UI.Desktop.Content.ListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="480" Width="640">
    <Grid>
        <Grid.Background>
            <ImageBrush/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="19*"/>
            <RowDefinition Height="141*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition Width="621*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Dina Listor" HorizontalAlignment="Left" Height="28" Margin="1,0,0,0" VerticalAlignment="Top" Width="71" Grid.Row="1" Grid.Column="1"/>
        <Label Content="Innehåll" HorizontalAlignment="Left" Height="28" Margin="320,0,0,0" VerticalAlignment="Top" Width="68" Grid.Row="1" Grid.Column="1"/>
        <Label Content="Listor" HorizontalAlignment="Left" Height="42" Margin="10,10,0,0" VerticalAlignment="Top" Width="126" Grid.ColumnSpan="2" FontSize="24"/>
        <Button Grid.Column="1" HorizontalAlignment="Left" Height="40" Margin="5,337,0,0" Grid.Row="1" VerticalAlignment="Top" Width="45" RenderTransformOrigin="2.844,1.5">
            <StackPanel Orientation="Horizontal">
                <Image Source="..\Resources\Icons\newList.png" Width="41" Height="33"/>
            </StackPanel>
        </Button>
        <Button Grid.Column="1" HorizontalAlignment="Left" Height="40" Margin="55,337,0,0" Grid.Row="1" VerticalAlignment="Top" Width="45" RenderTransformOrigin="2.844,1.5">
            <StackPanel Orientation="Horizontal">
                <Image Source="..\Resources\Icons\copyList.png" Width="41" Height="33"/>
            </StackPanel>
        </Button>

        <Button Grid.Column="1" HorizontalAlignment="Left" Height="40" Margin="105,337,0,0" Grid.Row="1" VerticalAlignment="Top" Width="45" RenderTransformOrigin="2.844,1.5">
            <StackPanel Orientation="Horizontal">
                <Image Source="..\Resources\Icons\deleteList.png" Width="41" Height="33"/>
            </StackPanel>
        </Button>

        <Button Grid.Column="1" HorizontalAlignment="Left" Height="40" Margin="155,337,0,0" Grid.Row="1" VerticalAlignment="Top" Width="45" RenderTransformOrigin="2.844,1.5">
            <StackPanel Orientation="Horizontal">
                <Image Source="..\Resources\Icons\importList.png" Width="41" Height="33"/>
            </StackPanel>
        </Button>
        <Button Content="Ok" Grid.Column="1" HorizontalAlignment="Left" Height="27" Margin="525,386,0,0" Grid.Row="1" VerticalAlignment="Top" Width="86" RenderTransformOrigin="2.844,1.5"/>
        <Button Content="Avbryt" Grid.Column="1" HorizontalAlignment="Left" Height="27" Margin="434,386,0,0" Grid.Row="1" VerticalAlignment="Top" Width="86" RenderTransformOrigin="2.844,1.5"/>
        <DataGrid Grid.Column="1" HorizontalAlignment="Left" Height="304" Margin="320,28,0,0" Grid.Row="1" VerticalAlignment="Top" Width="291">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Artikelnamn" Width="230"/>
                <DataGridTextColumn Header="Antal" Width="60" />
            </DataGrid.Columns>
        </DataGrid>
        <DataGrid Grid.Column="1" HorizontalAlignment="Left" Height="304" Margin="5,28,0,0" Grid.Row="1" VerticalAlignment="Top" Width="300">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Namn" Width="150" />
                <DataGridTextColumn Header="Antal varor" Width="80"/>
                <DataGridTextColumn Header="Pris" Width="70"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
