<Window x:Class="UI.Desktop.Checkout.CheckoutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CheckoutWindow" Height="450" Width="508" ResizeMode="NoResize">
    <Grid Margin="0,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="51*"/>
            <ColumnDefinition Width="200*"/>
        </Grid.ColumnDefinitions>

        <Label x:Name="Step1Indicator" Content="Konto" HorizontalAlignment="Left" Margin="26,10,0,0" VerticalAlignment="Top" Width="46" Height="24" FontSize="10"/>
        <Label x:Name="Step2Indicator" Content="Leverans &amp; Betalmedel" HorizontalAlignment="Left" Margin="0,74,0,0" VerticalAlignment="Top" Width="102" Height="20" FontSize="8"/>
        <Label x:Name="Step3Indicator" Content="Bekräfta" HorizontalAlignment="Left" Margin="26,134,0,0" VerticalAlignment="Top" Width="46" Height="24" IsManipulationEnabled="True" FontSize="10"/>
        <Grid x:Name="PageGrid" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        
        <Label x:Name="Step1Icon" Content="" HorizontalAlignment="Left" Height="30" Margin="26,34,0,0" VerticalAlignment="Top" Width="46" BorderThickness="2">
            <Label.Background>
                <ImageBrush ImageSource="..\Resources\Icons\user.png" Stretch="Uniform"/>
            </Label.Background>
        </Label>
        <Label x:Name="Step2Icon" Content="" Margin="26,94,0,0" VerticalAlignment="Top" Height="30" HorizontalAlignment="Left" Width="42">
            <Label.Background>
                <ImageBrush ImageSource="..\Resources\Icons\shippingandpayment.png" Stretch="Uniform"/>
            </Label.Background>
        </Label>
        <Label x:Name="Step3Icon" Content="" HorizontalAlignment="Left" Margin="26,158,0,0" VerticalAlignment="Top" Height="30" Width="42">
            <Label.Background>
                <ImageBrush ImageSource="..\Resources\Icons\confirm-png.png" Stretch="Uniform"/>
            </Label.Background>
        </Label>
    </Grid>
</Window>
